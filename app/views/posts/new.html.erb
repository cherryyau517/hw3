<h1> New Post </h1>

<%= form_with model: @post do |form| %>

  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p<>

  <p>
    <%= form.label "description", "Caption" %>
    <%= form.text_field "description" %>
  </p>

  <p>
    <%= form.label "posted_on", "Today's date" %>
    <%= form.date_field "posted_on" %>
  </p>

  <p><%= form.submit "Post it" %></p>
<% end %>